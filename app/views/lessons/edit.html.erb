<%= form_for(@lesson,   url: lesson_path, ) do |form|%>
    <div class='form-group'>
    <%= form.label :date %>
    <%= form.text_field :date, class: 'form-control'%>
    </div>
    
    <div class='form-group'>
    <%= form.label :timeslot %>
    <%= form.number_field :timeslot, class: 'form-control'%>
    </div>
   
    <div class='form-group'>
    <%= form.label :spot_id %>
    <%= form.number_field :spot_id, class: 'form-control'%>
    </div>
     <div class="actions">
    <%= form.submit "Update" %>
    </div>
</div>   
<%= link_to 'Cancel', lessons_path, class: 'btn btn-secondary' %>

<% end %>