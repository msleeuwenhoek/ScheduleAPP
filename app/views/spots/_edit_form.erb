




<%= form_with(model: model ) do |form|%>

    
        <%= form.label :period %> 
        <%= form.select :period, options_for_select(['March', 'April'])%>
        <br/>
 
    
        
    
        <%= form.label :weekday %>
        <%= form.select :weekday, weekday_options_for_select( index_as_value: false, day_format: :day_names),  class:'form-control' %>
        <br/>
        

    
        <%= form.label :time %>
        <%= form.select :time, options_for_select([18, 20])%>
        <br/>

        
        <%= form.label :spot_index_number %>
        <%= form.number_field :spot_index_number%>
        <br/>
        
    
       
        
    
        <%= form.label :lesson_amount %>
        <%= form.number_field :lesson_amount,  class:'form-control'%>
        <br/>

        <hr/>

        <%= form.label :user_id %>
        <%= form.select :user_id, @users.map { |user| [user.full_name, user.id]},  class:'form-control' %>
        <br/>

    
    <%= form.submit "Create" %>
   
    
   
<%= link_to 'Cancel', spots_path, class: 'btn btn-secondary' %>

<% end %>
