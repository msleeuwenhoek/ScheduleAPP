


<%= form_for(@spot, html: {'data-turbo' => "false"}, url: spot_path, ) do |form|%>
    <div class='form-group'>
    <%= form.label :period %>
    <%= form.text_field :period, class: 'form-control'%>
    </div>
    <div class='form-group'>
    <%= form.label :weekday %>
    <%= form.text_field :weekday, class: 'form-control'%>
    </div>
    <div class='form-group'>
    <%= form.label :time %>
    <%= form.number_field :time, class: 'form-control'%>
    </div>
    <div class='form-group'>
    <%= form.label :spot_index_number %>
    <%= form.number_field :spot_index_number, class: 'form-control'%>
    </div>
    <div class='form-group'>
    <%= form.label :user_id %>
    <%= form.number_field :user_id, class: 'form-control'%>
    </div>
    <div class='form-group'>
    <%= form.label :lesson_amount %>
    <%= form.number_field :lesson_amount, class: 'form-control'%>
    </div>
     <div class="actions">
    <%= form.submit "New" %>
    </div>
</div>   
<%= link_to 'Cancel', spots_path, class: 'btn btn-secondary' %>

<% end %>

