




<%= form_with(model: model ) do |form|%>
    <div class='form-group'>
        <%= form.label :period %>
        <%= form.text_field :period%>
    </div>

    <div class='form-group'>
        <%= form.label :weekday %>
        <%= form.select :weekday, weekday_options_for_select( index_as_value: false, day_format: :day_names), class: 'form-control' %>
        
    </div>

    <div class='form-group'>
        <%= form.label :time %>
        <%= form.number_field :time, class: 'form-control'%>
    </div>

    <div class='form-group'>
        <%= form.label :spot_index_number %>
        <%= form.number_field :spot_index_number, class: 'form-control'%>
    </div>

    <div class='form-group'>
        <%= form.label :user_id %>
        <%= form.select :user_id, @users.map { |user| [user.full_name, user.id]} %>
    </div>

    <div class='form-group'>
        <%= form.label :lesson_amount %>
        <%= form.number_field :lesson_amount, class: 'form-control'%>
    </div>

    <div class="actions">
    <%= form.submit "Create" %>
    </div>
</div>   
<%= link_to 'Cancel', spots_path, class: 'btn btn-secondary' %>

<% end %>


